{
  "name": "angular2-starter",
  "author": "Piotr Sikora",
  "version": "0.5.0",
  "scripts": {
    "tsc": "tsc --project src --watch",
    "tsc-build": "tsc --project ./src --outDir ./public/app --removeComments; cp ./src/index.html ./public/",
    "tsc-preview": "tsc --project ./src --watch --outDir ./preview/app; cp ./src/index.html ./preview/",

    "server": "live-server --open=src",
    "server-build": "live-server --open=build",
    "server-preview": "live-server --open=preview"
  },
  "dependencies": {
    "angular2": "2.0.0-alpha.46",
    "systemjs": "^0.19.5"
  },
  "devDependencies": {
    "live-server": "^0.8.2",
    "typescript": "^1.6.2"
  }
}
